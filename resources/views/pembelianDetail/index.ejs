<div class="content-wrapper">
  <section class="content-header">
    <h1>
      Pembelian
      <small>Control panel</small>
    </h1>
    <ol class="breadcrumb">
      <li>
        <a href="/"><i class="fa fa-dashboard"></i> Home</a>
      </li>
      <li class="active">Transaksi Pembelian</li>
    </ol>
  </section>
  <section class="content">
    <div class="row">
      <div class="col-md-12">
        <div class="row">
          <div class="col-md-12">
            <div class="box">
              <div class="box-header with-border">
                <table>
                  <tr>
                    <td>Suplier</td>
                    <td>:<%= suplier.nama %></td>
                  </tr>
                  <tr>
                    <td>Telepon</td>
                    <td>:<%= suplier.telepon %></td>
                  </tr>
                  <tr>
                    <td>Alamat</td>
                    <td>:<%= suplier.alamat %></td>
                  </tr>
                </table>
              </div>
              <div class="box-body table-responsive">
                <div class="row">
                  <div class="col-md-5">
                    <div class="form-group">
                      <label for="">Kode Produk</label>
                      <div class="input-group">
                        <input
                          type="text"
                          name="kode_produk"
                          id="kode_produk"
                          class="form-control"
                        />
                        <span class="input-group-btn">
                          <button
                            id="tampilProduk"
                            class="btn btn-info btn-flat"
                          >
                            <i class="fa fa-arrow-right"></i>
                          </button>
                        </span>
                      </div>
                    </div>
                  </div>
                </div>
                <table
                  id="pembelianDetail"
                  class="table table-stiped table-bordered"
                >
                  <thead>
                    <th width="5%">No</th>
                    <th>Nama Produk</th>
                    <th>Harga</th>
                    <th width="10%">Jumlah</th>
                    <th>Sub Total</th>
                    <th width="15%"><i class="fa fa-fw fa-gear"></i></th>
                  </thead>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>

<%- include('./partials/modal.ejs') %> <%- include('./partials/script.ejs') %>
