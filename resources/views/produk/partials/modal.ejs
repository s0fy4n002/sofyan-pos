<!-- Modal -->
<div id="produkFormModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
          &times;
        </button>
        <h4 class="modal-title">Modal Header</h4>
      </div>
      <div class="modal-body">
        <form id="form" action="" data-type="add">
          <input type="hidden" name="id" />
          <div class="form-group">
            <label for="nama">Nama Produk</label>
            <input
              type="text"
              class="form-control"
              data-id=""
              name="nama"
              id="nama"
              required
            />
          </div>
          <div class="form-group">
            <label for="kategoriId">Kategori</label>
            <select name="kategoriId" id="kategoriId" class="form-control">
              <option selected>Pilih Kategori</option>
              <% categories.forEach(categori => { %>
              <option value="<%= categori._id %>">
                <%= categori.kategori %>
              </option>
              <% }) %>
            </select>
          </div>
          <div class="form-group">
            <label for="merk">Merk</label>
            <input
              type="text"
              class="form-control"
              data-id=""
              name="merk"
              id="merk"
              required
            />
          </div>
          <div class="form-group">
            <label for="hargaBeli">Harga Beli</label>
            <input
              type="number"
              class="form-control"
              data-id=""
              name="hargaBeli"
              id="hargaBeli"
              required
            />
          </div>
          <div class="form-group">
            <label for="hargaJual">Harga Jual</label>
            <input
              type="number"
              class="form-control"
              data-id=""
              name="hargaJual"
              id="hargaJual"
              required
            />
          </div>
          <div class="form-group">
            <label for="diskon">Diskon</label>
            <input
              type="number"
              class="form-control"
              data-id=""
              name="diskon"
              id="diskon"
            />
          </div>
          <div class="form-group">
            <label for="stok">Stok</label>
            <input
              type="number"
              class="form-control"
              data-id=""
              name="stok"
              id="stok"
            />
          </div>
          <button type="submit" class="btn btn-default">Simpan</button>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">
          Close
        </button>
      </div>
    </div>
  </div>
</div>
